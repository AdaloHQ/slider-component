{
  "displayName": "Slider",
  "icon": "./icon.png",
  "defaultWidth": 280,
  "defaultHeight": 50,
  "resizeY": true,
  "components": "./index.js",
  "props": [
    {
      "name": "controlledValue",
      "displayName": "What Property Does This Adjust?",
      "type": "number",
      "role": "autosaveInput"
    },
    {
      "name": "minValue",
      "displayName": "Minimum Value",
      "type": "number",
      "default": 1
    },
    {
      "name": "maxValue",
      "displayName": "Maximum Value",
      "type": "number",
      "default": 10
    },
    {
      "name": "incrementSize",
      "displayName": "Increment Size",
      "type": "number",
      "default": 1
    }
  ],
  "childComponents": [
    {
      "name": "track",
      "displayName": "Track",
      "props": [
        {
          "name": "filledColor",
          "displayName": "Filled Color",
          "type": "color",
          "default": "@primary"
        },
        {
          "name": "unfilledColor",
          "displayName": "Unfilled Color",
          "type": "color",
          "default": "#e0e0e0"
        },
        {
          "name": "height",
          "displayName": "Height",
          "type": "number",
          "default": 4
        },
        {
          "name": "trackRounding",
          "displayName": "Rounding",
          "type": "number",
          "control": {
            "type": "slider",
            "max": 5,
            "min": 0
          },
          "default": 5
        }
      ]
    },
    {
      "name": "marker",
      "displayName": "Marker",
      "props": [
        {
          "name": "markerColor",
          "displayName": "Marker Color",
          "type": "color",
          "default": "#fff"
        },
        {
          "name": "markerSize",
          "displayName": "Marker Size",
          "type": "number",
          "default": 30
        },
        {
          "name": "markerBorder",
          "displayName": "Border",
          "type": "boolean",
          "default": true
        },
        {
          "name": "markerBorderColor",
          "displayName": "Border Color",
          "type": "color",
          "default": "#ddd",
          "enabled": { "markerBorder": true }
        },
        {
          "name": "markerBorderNum",
          "displayName": "Border Size",
          "type": "number",
          "default": 1,
          "enabled": { "markerBorder": true }
        },
        {
          "name": "shadow",
          "displayName": "Shadow",
          "type": "boolean",
          "default": true
        }
      ]
    },
    {
      "name": "labels",
      "displayName": "Labels",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "bgColor",
          "displayName": "Background Color",
          "type": "color",
          "default": "#fff"
        },
        {
          "name": "txtColor",
          "displayName": "Text Color",
          "type": "color",
          "default": "@primary"
        },
        {
          "name": "font",
          "displayName": "Text Size",
          "type": "number",
          "default": 18
        },
        {
          "name": "labelRounding",
          "displayName": "Rounding",
          "type": "number",
          "control": {
            "type": "slider",
            "max": 50,
            "min": 0
          },
          "default": 50
        }
      ]
    }
  ]
}
